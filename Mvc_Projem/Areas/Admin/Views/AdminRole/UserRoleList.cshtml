@using Mvc_Projem.EntityLayer.Concrete
@model List<AppUser>
@{
    ViewBag.Title = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Rol Atama</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Admin/AdminRole/AssingRole/@item.Id" class="btn btn-outline-warning">Rol Atama</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminRole/Index" class="btn btn-primary">Rol Listesine Dön</a>
