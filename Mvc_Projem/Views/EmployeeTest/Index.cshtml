@using Mvc_Projem.Controllers
@model List<EmployeeTestController.Class1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>SİL</th>
        <th>DÜZENLE</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td><a href="/EmployeeTest/DeleteEmployee/@item.ID" class="btn-primary">SİL</a></td>
            <td><a href="/EmployeeTest/EditEmployee/@item.ID" class="btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/EmployeeTest/AddEmployee/" class="btn-outline-success">YENİ ÇALIŞAN GİRİŞİ</a>